@model Globus.Models.skill

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<h2>Add New Our Skill</h2>

@using (Html.BeginForm("Create", "skill", FormMethod.Post, new { id = "EditForm" }))
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)
    <fieldset style="padding-left:5px;">
        <div class="form-group">
                <label for="room" style="width:auto;display:block;">Main Description</label>
                <textarea name="des" id="des" class="form-control" rows="50" style="height:101px;">
                </textarea>
                @Html.ValidationMessageFor(model => model.des)
        </div>
        <div class="form-group">
                <label for="room" style="width:auto;display:block;">Skill 1</label>
                <input name="skill1" type="text" id="skill1" value="" class="form-control" style="width:60%;" placeholder="Gõ Skill 1"/>
                @Html.ValidationMessageFor(model => model.skill1)
        </div>
        <div class="form-group">
                <label for="room" style="width:auto;display:block;">Description 1</label>
                <textarea name="des1" id="des1" class="form-control" rows="50" style="height:101px;">
                </textarea>
                @Html.ValidationMessageFor(model => model.des1)
        </div>
        <div class="form-group">
                <label for="room" style="width:auto;display:block;">Skill 2</label>
                <input name="skill2" type="text" id="skill2" value="" class="form-control" style="width:60%;" placeholder="Gõ Skill 2"/>
                @Html.ValidationMessageFor(model => model.skill2)
        </div>
        <div class="form-group">
                <label for="room" style="width:auto;display:block;">Description 2</label>
                <textarea name="des2" id="des2" class="form-control" rows="50" style="height:101px;">
                </textarea>
                @Html.ValidationMessageFor(model => model.des2)
        </div>
        <div class="form-group">
                <label for="room" style="width:auto;display:block;">Skill 3</label>
                <input name="skill3" type="text" id="skill3" value="" class="form-control" style="width:60%;" placeholder="Gõ Skill 3"/>
                @Html.ValidationMessageFor(model => model.skill3)
        </div>
        <div class="form-group">
                <label for="room" style="width:auto;display:block;">Description 3</label>
                <textarea name="des3" id="des3" class="form-control" rows="50" style="height:101px;">
                </textarea>
                @Html.ValidationMessageFor(model => model.des3)
        </div>
        <div class="col-md-6" style="text-align:center;">
            <input type="button" onclick="checkField();" value="Create" style="height:50px;width:100px;"/>
        </div>
    </fieldset>
}
<div id="loadingImage" name="loadingImage" style="z-index:1000;position:fixed;left:40%;top:30%;width:32px;height:32px;display:none;">
    <img src="/Images/loading.gif">
</div>
<div>
    @Html.ActionLink("Back to List", "Index")
</div>

<script>

    function checkField() {
        if (document.getElementById("des").value == "") {
            alert("enter description!");
            document.getElementById("des").focus();
            return false;
        }
        if (document.getElementById("skill1").value == "") {
            alert("enter vision 1!");
            document.getElementById("skill1").focus();
            return false;
        }
        if (document.getElementById("des1").value == "") {
            alert("enter description!");
            document.getElementById("des1").focus();
            return false;
        }
        if (document.getElementById("skill2").value == "") {
            alert("enter skill 2!");
            document.getElementById("skill2").focus();
            return false;
        }
        if (document.getElementById("des2").value == "") {
            alert("enter description!");
            document.getElementById("des2").focus();
            return false;
        }
        if (document.getElementById("skill3").value == "") {
            alert("enter skill 3!");
            document.getElementById("skill3").focus();
            return false;
        }
        if (document.getElementById("des3").value == "") {
            alert("enter description!");
            document.getElementById("des3").focus();
            return false;
        }
        document.getElementById("EditForm").submit();
    }

</script>
